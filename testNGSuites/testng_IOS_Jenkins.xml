<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="IOSSuite" verbose="2" parallel="methods"
	thread-count="1" allow-return-values="true">
	<!-- ðŸ“Œ Global Listeners (Reporting, Retry, etc.) -->
	<listeners>
		<listener class-name="org.mydemo.retryAnalyzer.RetryListener" />
		<listener class-name="org.mydemo.reporting.Listeners" />
	</listeners>

	<!-- âœ… Test block -->
	<test name="IOSRegression">
		<!-- ðŸ”§ Platform-specific parameter (can be read in @BeforeMethod) -->
		<parameter name="platform" value="${platform}" />
		<!-- âœ… Group filtering -->
		<groups>
			<run>
				<!-- Use multiple include groups if needed -->
				<include name="${tag}" />
				<!-- <include name="sanity"/> -->
			</run>
		</groups>
		<!-- âœ… Target packages (all classes in this package will be scanned) -->
		<packages>
			<package name="org.mydemo.ios.testCases" />
		</packages>
	</test>

</suite>